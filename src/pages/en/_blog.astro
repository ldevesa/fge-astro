---
import Card from "../../components/Card.astro";
import { getCollection } from 'astro:content';
import BlogLayout from "../../layouts/BlogLayout.astro";


const allBlogPostsEn = await getCollection('blog', ({id}) => {
	return id.startsWith('en/')
});

---

<BlogLayout title="This is a posts">
	{
		allBlogPostsEn && allBlogPostsEn.map((post) => (
			<Card 
				title={post.data.title}
				image={post.data.image}
				body={post.data.author}
				date= {post.data.publishDate.toLocaleDateString('en', {
					year: "numeric",
					month: "short",
					day: "numeric"
				})}
				href={`./blog/${post.slug.split('/')[1]}`}
			/>
		))
	}
</BlogLayout>


<style>
	h1 {
		color: aliceblue;
	}
</style>