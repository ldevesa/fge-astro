---
import Card from "../../components/Card.astro";
import { getCollection } from 'astro:content';
import BlogLayout from "../../layouts/BlogLayout.astro";

const allBlogPostsEs = await getCollection('blog', ({id}) => {
	return id.startsWith('es/')
});
---


<BlogLayout title="Estas son las Noticias">
	{
		allBlogPostsEs.map((post) => (
			<Card 
				title={post.data.title}
				image={post.data.image}
				body={post.data.author}
				date= {post.data.publishDate.toLocaleDateString('es', {
					year: "numeric",
					month: "short",
					day: "numeric"
				})}
				href={`./blog/${post.slug.split('/')[1]}`}
			/>
		))
	}
</BlogLayout>

<style>
	h1 {
		color: aliceblue;
	}
</style>