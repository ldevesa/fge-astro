---
interface Props {
    image: string;
    width: number;
    height: number;
}
const { image, width, height } = Astro.props;
---


<img class="giro" src={image} alt="image" width={width} height={height} />



<style>
	.container-giro {

	}
</style>


<script>
    gsap.registerPlugin(ScrollTrigger);
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    // Ejecutar la función setupSidebar() cada vez que ocurre una transición de página
	document.addEventListener('astro:page-load', () => {
        

        /* gsap.to(".giro", {
            scrollTrigger: {
                trigger: ".container-giro",
                scrub: true,
                start: 'bottom bottom',
                end: '+=2000',
            },
            rotation: 1500,
            ease: "none",
        });  */


        gsap.timeline({
        scrollTrigger:{
            trigger: ".container-giro",
            scrub:0.2,
            start: 'bottom bottom',
            end:'+=10000',
        }
        })
        .to('.giro', {
        rotation:360*8,
        duration:1, ease:'none',
        })


    });


</script>